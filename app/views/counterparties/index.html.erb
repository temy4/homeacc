<% unless notice.nil? %>
  <input type="hidden" id="notice" value="<%= notice %>" data-type="<%= flash[:type] %>" data-state="<%= flash[:state] %>" data-rollback="<%= flash[:rollback_url] %>" />
<% end %>
<h3 class="header">Контрагенты</h3>

<div class="row">
  <div class="input-field col m6 s12">
    <input id="search_field" type="text">
    <label for="search_field">Поиск</label>
  </div>
</div>
<%= form_tag destroy_multiple_counterparties_path, method: :post, :id => 'items-list' do %>
<div class="row hide-on-med-and-down">
  <div class="col m6 s12">
    <a class="btn" id="btn_select_all"><i class="material-icons left" id="cb_chk_all_icon">check_box_outline_blank</i><span id="cb_chk_all_text">Выбрать все</span></a>
    <%= link_to new_counterparty_path, :class => "btn" do %>
      <i class="material-icons left">add</i>Добавить</a>
    <% end %>

    <button id="btd_delete" class="btn red lighten-3 disabled" name="commit" type="submit" data-confirm="Вы уверены, что хотите удалить выбранных контрагентов?" rel="nofollow" data-method="delete">
      <i class="material-icons left">delete</i>Удалить
    </button>
  </div>
</div>

<div class="row hide-on-large-only">
  <div class="col m6 s12">
    <a class="btn-floating" id="btn_select_all_small"><i class="material-icons left" id="cb_chk_all_icon_small">check_box_outline_blank</i></a>
    <%= link_to new_counterparty_path, :class => "btn-floating" do %>
      <i class="material-icons left">add</i></a>
    <% end %>

    <button id="btd_delete_small" class="btn-floating red lighten-3 disabled" name="commit" type="submit" data-confirm="Вы уверены, что хотите удалить выбранных контрагентов?" rel="nofollow" data-method="delete">
      <i class="material-icons left">delete</i>
    </button>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <table class="striped">
      <thead>
        <tr>
          <th>Контрагент</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @counterparties.each do |counterparty| %>
        <tr class="content-label">
          <td>
            <input type="checkbox" class="list-chk visible filled-in" name="counterparties[]" value="<%= counterparty.id %>" id="counterparty-<%= counterparty.id %>" />
            <label for="counterparty-<%= counterparty.id %>"><%= counterparty.counterparty_name %></label>
          </td>
          <td>
            <div class="hide-on-small-only">
              <%= link_to counterparty, :class => "btn-floating btn cyan lighten-3" do %><i class="material-icons">launch</i><% end %>
              <%= link_to edit_counterparty_path(counterparty), :class => "btn-floating btn teal lighten-3" do %><i class="material-icons">edit</i><% end %>
              <%= link_to counterparty, :class => "btn-floating btn red lighten-3", method: :delete, data: { confirm: 'Вы уверены, что хотите удалить контрагента "' + counterparty.counterparty_name + '"?' } do %><i class="material-icons">delete</i><% end %>
            </div>
            <div class="hide-on-med-and-up">
              <%= link_to counterparty, :class => "btn cyan lighten-3" do %><i class="material-icons">launch</i><% end %><br /><br />
              <%= link_to edit_counterparty_path(counterparty), :class => "btn teal lighten-3" do %><i class="material-icons">edit</i><% end %><br /><br />
              <%= link_to counterparty, :class => "btn red lighten-3", method: :delete, data: { confirm: 'Вы уверены, что хотите удалить контрагента "' + counterparty.counterparty_name + '"?' } do %><i class="material-icons">delete</i><% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>
<script type="text/javascript">
$( document ).ready(function(){
  $('#btn_select_all, #btn_select_all_small').on('click', function(){
    $(".list-chk:not(.visible)").prop('checked', false);
    $(".list-chk.visible").prop('checked', !($('.list-chk.visible:checked').size() == $(".list-chk.visible").size()) );
    check_any_selected();
    check_all_selected();
  })

  $(".list-chk.visible").change(function(){
    check_any_selected();
    check_all_selected();
  })

  function check_all_selected(){
    if( $('.list-chk.visible:checked').size() == $(".list-chk.visible").size() && $(".list-chk.visible").size() > 0 ){
      $('#cb_chk_all_icon').text('check_box');
      $('#cb_chk_all_icon_small').text('check_box');
      $('#cb_chk_all_text').text('Снять выделение');
      return true;
    }
    else{
      $('#cb_chk_all_icon').text('check_box_outline_blank');
      $('#cb_chk_all_icon_small').text('check_box_outline_blank');
      $('#cb_chk_all_text').text('Выделить все');
      return false;
    }
  }
  function check_any_selected(){
    if ($('.list-chk.visible:checked').size() > 0 ){
      $('#btd_delete, #btd_delete_small').removeClass('disabled');
      return true;
    }
    else{
      $('#btd_delete, #btd_delete_small').addClass('disabled');
      return false;
    }
  }

  $('#search_field').on('keyup paste', function(){
    text = $(this).val();
    $('tr.content-label').show();
    $('.list-chk').addClass('visible');
    if(text.length > 0){
      $('tr.content-label').hide();
      $('.list-chk').removeClass('visible');
      $( "tr.content-label:contains('" + text + "')" ).show();
      $( "tr.content-label:contains('" + text + "') .list-chk" ).addClass('visible');
    }
    check_all_selected();
  })

  check_any_selected();
  check_all_selected();
})
</script>
