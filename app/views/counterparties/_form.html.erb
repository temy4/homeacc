<%= form_for(@counterparty) do |f| %>
  <% if @counterparty.errors.any? %>
    <input type="hidden" id="notice" value="<%= @counterparty.errors.full_messages.first  %>" data-type="error" data-state="<%= @counterparty.errors[:state].first %>" data-rollback="<%= @counterparty.errors[:rollback].first %>" />
  <% end %>


  <div class="row">
    <div class="input-field col m6 s12">
      <% if @action == 'show' %>
        <%= f.text_field :counterparty_name, :readonly => 'readonly' %>
      <% else %>
        <%= f.text_field :counterparty_name %>
      <% end %>
      <% if @action == 'new' %>
        <%= f.label :Контрагент %>
      <% else %>
        <%= f.label :Контрагент, :class => "active" %>
      <% end %>
    </div>

  </div>
  <% unless @action == 'show' %>
    <div class="actions">
      <%= link_to 'Отмена', counterparties_path, :class => "waves-effect waves-light btn red accent-1" %>
      <button class="btn waves-effect waves-light" type="submit" name="commit">Сохранить</button>
    </div>
  <% end %>
<% end %>
